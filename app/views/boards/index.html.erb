<h1>萬寶路的討論區</h1>

<%= link_to '新增討論區', new_board_path %>
<%= link_to '書店', root_path %>

<table>
<thead>
<tr>
<td>討論區名稱</td>
<td>討論區主題</td>
</tr>
</thead>
<tbody>
<% @boards.each do |board| %>
<tr>
<td><%= board.title %></td>
<td><%= board.chat %></td>
<td><%= link_to '編輯', edit_board_path(board) %></td>
<td><%= link_to '刪除', board_path(board), method: 'delete', data: { confirm: '確認刪除' } %></td></tr>
<% end %>
</tbody></table>